{
  "include": ["src/**/*.js", "src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  }
}
