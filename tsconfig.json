{
  "include": ["src/**/*.js", "src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  }
}
