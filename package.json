{
  "name": "@statistikzh/leu",
  "description": "UI component library of the canton of zurich",
  "license": "MIT",
  "author": "statistikzh",
  "version": "0.0.0",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "./*": {
    "default": "./src/exports/*"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.mjs,.html . --ignore-path .gitignore ",
    "lint:prettier": "prettier \"**/*.{js,mjs,md,html,json}\" --check --ignore-path .gitignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js,.mjs,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.{js,mjs,md,html,json}\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "prepare": "husky install",
    "storybook": "npm run analyze && storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^3.0.2",
    "@open-wc/eslint-config": "^9.2.1",
    "@open-wc/testing": "^3.1.6",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/blocks": "^7.4.5",
    "@storybook/web-components": "^7.4.5",
    "@storybook/web-components-vite": "^7.4.5",
    "@web/dev-server": "^0.1.34",
    "@web/test-runner": "^0.14.0",
    "deepmerge": "^4.3.1",
    "es-dev-server": "^2.1.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-storybook": "^0.6.14",
    "husky": "^8.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "storybook": "^7.4.5"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier",
      "plugin:storybook/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": false
  },
  "lint-staged": {
    "*.{js,mjs,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": "prettier --write"
  }
}
